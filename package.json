{
  "name": "spring-endpoints-tester",
  "displayName": "Spring Endpoints Tester",
  "description": "Test your Spring Boot REST endpoints directly from VS Code - Free IntelliJ IDEA Ultimate alternative",
  "version": "0.1.0",
  "publisher": "Mamadou SY",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mamadoujuniorsy/spring-endpoints-tester"
  },
  "bugs": {
    "url": "https://github.com/mamadoujuniorsy/spring-endpoints-tester/issues"
  },
  "engines": {
    "vscode": "^1.107.0"
  },
  "categories": [
    "Testing",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "spring",
    "spring boot",
    "rest",
    "api",
    "testing",
    "http",
    "java",
    "endpoint"
  ],
  "activationEvents": [
    "onLanguage:java",
    "workspaceContains:**/pom.xml",
    "workspaceContains:**/build.gradle"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "Spring Endpoints Tester",
      "properties": {
        "springEndpoints.baseUrl": {
          "type": "string",
          "default": "http://localhost:8080",
          "description": "Base URL for Spring Boot application"
        },
        "springEndpoints.scanOnStartup": {
          "type": "boolean",
          "default": true,
          "description": "Automatically scan for endpoints on startup"
        }
      }
    },
    "views": {
      "explorer": [
        {
          "id": "springEndpoints",
          "name": "Spring Endpoints"
        }
      ]
    },
    "commands": [
      {
        "command": "springEndpoints.refresh",
        "title": "Refresh Spring Endpoints",
        "icon": "$(refresh)"
      },
      {
        "command": "springEndpoints.testEndpoint",
        "title": "Test Endpoint",
        "icon": "$(debug-start)"
      },
      {
        "command": "springEndpoints.copyUrl",
        "title": "Copy URL"
      },
      {
        "command": "springEndpoints.goToEndpoint",
        "title": "Go to Endpoint Definition"
      },
      {
        "command": "springEndpoints.openClient",
        "title": "Open HTTP Client",
        "icon": "$(browser)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "springEndpoints.refresh",
          "when": "view == springEndpoints",
          "group": "navigation@1"
        },
        {
          "command": "springEndpoints.openClient",
          "when": "view == springEndpoints",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "springEndpoints.testEndpoint",
          "when": "view == springEndpoints && viewItem == endpoint",
          "group": "inline"
        },
        {
          "command": "springEndpoints.copyUrl",
          "when": "view == springEndpoints && viewItem == endpoint"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.107.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.48.1",
    "eslint": "^9.39.1",
    "esbuild": "^0.27.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
